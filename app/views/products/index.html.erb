<h4><%= @title %></h4>

<table>
  <thead>
    <tr>
       <th>Name</th>
       <th>Price</th>
       <th>Photo</th>
       <th>description</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
         <td><%= link_to product.name, product_path(product.id)%></td>
         <td><%= product.price %></td>
         <td><%= image_tag(product.photo_url, class: "product_img")%></td>
        <td><%= product.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
